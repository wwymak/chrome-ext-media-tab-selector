{
  "manifest_version": 2,

  "name": "Audio stopper",
  "description": "This extension lets you quickly navigate to the tab that has media playing",
  "version": "0.1",
  "minimum_chrome_version": "45",

  "icons": {
    "38": "images/computer_38.png",
    "128": "images/computer_128.png" },
  "browser_action": {
    "default_title": "Mute audio"
  },
  "background": {
    "scripts": [ "js/chrome-promise.js", "js/eventPage.js"],
    "persistent": true
  },
  "permissions": [
    "tabs"
  ]
}